<div>
  <img src="{{beer.image_url}}">
  <div>
    <h1>{{beer.name}}</h1>
    <p>{{beer.tagline}}</p>
    <p>{{beer.description}}</p>
    <h2>Food pairing</h2>
    <ul>
      {{#each beer.food_pairing}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <div>Brewers tips: {{beer.brewers_tips}}</div>
  </div>
</div> 