{{#each beerInfoFromApi}}
<div class='beer-info'>
    <img class = "photo" src={{this.image_url}}>
    <div>
        <p class="name">{{this.name}}</p>
        <p class="tagline">{{this.tagline}}</p>
        <p class="description">{{this.description}}</p>
        <h2>Food Pairing</h2>
        <ul>
            {{#each food_pairing}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <h2>Brewers Tips:</h2> <span>{{brewers_tips}}</span>
    </div>
</div>
    
{{/each}}
